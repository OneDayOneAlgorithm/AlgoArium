<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash"
    tools:context=".SplashActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_image"
        android:layout_width="@dimen/_600sdp"
        android:layout_height="@dimen/_600sdp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="@dimen/_200sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loading_logo"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/splash_image" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_logo"
        android:layout_width="0dp"
        android:layout_height="@dimen/_300sdp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/splash_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>